<%- include('header') -%>
        <div class="box" id="heading">
            <h1><%= listTitle %></h1>
        </div>

        <div class="box">
			<% for(let i=0; i<items.length; i++ ){ %>
				<div class="item">
					<input type="checkbox">
					<p> <%= items[i] %></p>
				</div>
			<% } %>

			<form action="/" method="post">
				<input type="text" name="newItem" placeholder="New Item" autocomplete="off">
				<button type="submit" name= <%= listName %> value= <%= listTitle %>>+</button>
			</form>
			<% if(listName!="Work"){%>
			<a href="/work"><button class="work-btn">Work List</button></a>
			<%}else{%>
			<a href="/"><button class="main-btn">Main List</button></a>
			<%}%>
        </div>

<%- include('footer') -%>



